<%- include('../partials/header.ejs')%>

  <main>
    <form action='/events' method='POST'>
      <table>
        <tr>
          <td><label for="topic"></label> Topic:</td>
          <td><input type="text" id="topic" name="topic" class="fixed-width" required/></td>

        </tr>

        <tr>
          <td><label for="name"></label> Event_Name:</td>
          <td><input type="text" id="name" name="name" class="fixed-width" required/></td>
        </tr>


        <tr>
          <td><label for="date"></label> Date:</td>
          <td><input type="date" id="date" name="date" required/></td>
        </tr>

        
        <tr>
          <td><label for="start_time"></label> Start time:</td>
          <td><input type="time" id="start_time" name="start_time" class="fixed-width" required/></td>
        </tr>

        <tr>
          <td><label for="end_time"></label> End time:</td>
          <td><input type="time" id="end_time" name="end_time" class="fixed-width" required/></td>
        </tr>


        <tr>
          <td><label for="venue"></label> Venue:</td>
          <td><input type="text" id="venue" name="venue" class="fixed-width" required /></td>
        </tr>

        <tr>
          <td class="align-top"><label for="details"></label> Details:</td>
          <td><textarea rows="5" id ="details" name="details" class="fixed-width" required minlength="10"></textarea></td>

        </tr>

      
        <tr>
          <td><label for="image"></label> Image: </td>
          <td><input type="text" id="image" name="image" class="fixed-width" required /></td>
        </tr>

        <tr>
        
          <td colspan="2" class="align-right"><button>Submit</button></td>

        </tr>
      </table>
    </form>
  </main>

  <%- include('../partials/footer.ejs')%>