<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Creativity Unthreaded</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>

<body>
    <header class="banner">
        <a href="/home">
            <img src="/images/logo.png" alt="logo">
        </a>
        <nav class="p_navigation">

            <ul>
                
                <% if(!user){%>
                <li><a href="/users/login">Login</a></li>
                <li><a href="/users/new">Signup</a></li>
                <%} else{%>
                <li><a href='/events/new'>Create New Event</a></li>
                <li><a href='/users/profile'>Profile</a></li>
                <li><a href='/users/logout'>Logout</a></li>
                <br><br>
                <%if(user.firstName){%>
                    <h2 class="welcome">Welcome <%= user.firstName%></h2>
                <%}else if(user.name){%>
                    <h2 class="welcome">Welcome <%= user.name%></h2>
                <%}%>
               
               
                <% }%>

        
             

            </ul>

        </nav>

    </header>

    <div class="events">
        <nav>
           

            <ul>
                <li><a href="/events">Events</a></li>
              
                
            </ul>
           
         
        </nav>

    </div>

    <% if(errorMessages.length > 0) {%>
        <% errorMessages.forEach(message=>{%>
            <div class='error'>
                <%=message%>
            </div>
            <%});%>
                <%}%>
    
    <% if(successMessages.length > 0) {%>
    
        <% successMessages.forEach(message=>{%>
                <div class='success'>
                    <%=message%>
                </div>
                <%});%>
                     <%}%>

